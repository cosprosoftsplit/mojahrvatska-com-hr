---
interface Props {
  value: string | number;
  label: string;
  change?: number;
  icon?: string;
  class?: string;
}

const { value, label, change, icon, class: className = '' } = Astro.props;
---

<div class={`bg-gray-900 border-l-4 border-blue-500 rounded-lg p-4 ${className}`}>
  {icon && <div class="text-lg mb-1">{icon}</div>}
  <div class="text-2xl font-black text-gray-100">
    {typeof value === 'number' ? value.toLocaleString('hr-HR') : value}
  </div>
  <div class="text-xs text-gray-400 mt-1">{label}</div>
  {change !== undefined && (
    <div class={`text-xs mt-1 font-bold ${change >= 0 ? 'text-green-500' : 'text-red-500'}`}>
      {change >= 0 ? '\u2191' : '\u2193'} {change >= 0 ? '+' : ''}{change.toFixed(1)}%
    </div>
  )}
</div>
