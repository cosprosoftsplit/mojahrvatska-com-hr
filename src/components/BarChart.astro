---
interface BarItem {
  label: string;
  value: number;
  color?: string;
}

interface Props {
  items: BarItem[];
  maxValue?: number;
  unit?: string;
  class?: string;
}

const { items, maxValue, unit = '%', class: className = '' } = Astro.props;
const max = maxValue || Math.max(...items.map(i => i.value));
---

<div class={`space-y-2 ${className}`}>
  {items.map(item => (
    <div>
      <div class="flex justify-between text-xs mb-1">
        <span class="text-gray-400">{item.label}</span>
        <span class="text-gray-300 font-bold">{item.value.toFixed(1)}{unit}</span>
      </div>
      <div class="w-full bg-gray-800 rounded-full h-5 overflow-hidden">
        <div
          class="h-full rounded-full transition-all"
          style={`width: ${(item.value / max) * 100}%; background-color: ${item.color || '#3b82f6'}`}
        ></div>
      </div>
    </div>
  ))}
</div>
