---
import SEOHead from './SEOHead.astro';
import Analytics from './Analytics.astro';
import ConsentBanner from './ConsentBanner.astro';
import Footer from './Footer.astro';
import siteConfig from '../../../site.config.json';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  schema?: object;
  article?: boolean;
  class?: string;
}

const { title, description, canonical, schema, article, class: bodyClass = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang={siteConfig.locale}>
  <head>
    <SEOHead
      title={title}
      description={description}
      canonical={canonical}
      schema={schema}
      article={article}
    />
    {(siteConfig.monetization === 'ads' || siteConfig.monetization === 'both') && siteConfig.adsenseId && (
      <script async src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${siteConfig.adsenseId}`} crossorigin="anonymous"></script>
    )}
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class={`min-h-screen bg-gray-950 text-gray-100 ${bodyClass}`}>
    <slot />
    <Footer />
    <ConsentBanner />
    <Analytics />
  </body>
</html>
